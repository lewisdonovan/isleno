{
  "name": "isleno-monorepo",
  "version": "1.0.0",
  "description": "A monorepo built with npm workspaces, Next.js, and Turbopack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "prepare": "husky install",
    "check-env-sync": "node scripts/check-env-sync.js"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "turbo": "^2.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cmdk": "^1.1.1"
  }
}
